<%= render "shared/header" %>

<h2>ユーザー情報編集 </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "ユーザー名" %><br />
    <%= f.text_field :name %>
  </div>
  

    <div class="field">
    <%= f.label :image, "プロフィール画像" %><br />
   <%= f.file_field :image %>
  </div>



  <div class="field">
    <%= f.label :email,"メールアドレス"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

    <div class="field">
    <%= f.label :current_password,"現在のパスワード" %> <br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>


  <div class="field">
    <%= f.label :password, "新しいパスワード（6文字以上）"%> <br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"パスワード再入力"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


  <div class="actions">
    <%= f.submit "ユーザー情報更新" %>
  </div>
<% end %>
<div class="actions">アカウント削除 <%= button_to "アカウント削除します", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></div>
<%= render "shared/footer" %>


