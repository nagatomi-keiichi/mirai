<%= render "shared/header" %>

<%= form_with(model: @diary, local: true) do |f| %>
  <%= render "shared/error_messages", model: @diary %>

  <div class="field">
    <%= f.label :title,"タイトル" %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :start_time,"予定日時" %>
    <%= f.datetime_select :start_time %>
  </div>

  <div class="field">
    <%= f.label :content,"　　予定" %>
    <%= f.text_field :content %>
  </div>

  <div class="field">
    <%= f.label :image, "画像" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.submit"編集する" %>
  </div>

        <footer>
       <p>
        Copyright MIRAI 2021.
       </p>
      </footer>


<% end %>
